<div class="text-center">
    <h2>Admin page</h2>
</div>
<hr />
<div class="row">
    <div class="col">
        <h5>Recipes</h5>
        <form asp-action="Recipe" asp-controller="Recipe"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-mode="replace"
              data-ajax-update="#recipeChoice">

            <button value="Dish" name="buttonType">Dish</button>
            <button value="Ingredient" name="buttonType">Ingredient</button>
        </form>

        <div id="recipeChoice"></div>
    </div>
    <div class="col">
        <h5>Users</h5>
        <form asp-action="SearchUser" asp-controller="Admin"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-mode="replace"
              data-ajax-update="#searchResult">

            <input type="text" name="searchValue" />
            <input type="submit" value="Search" />
        </form>

        <div id="searchResult"></div>
    </div>
    <div class="col" id="order"><h5>Selected order</h5><p>No order selected.</p></div>
</div>
